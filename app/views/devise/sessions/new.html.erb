<%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="card position-absolute start-50 top-50 translate-middle">
    <div class="card-header">
      <h2 class="text-center">Log in</h2>
    </div>
    <div class="card-body pt-5 pb-3 px-5">
      <div class="form-inputs">
        <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" } %>
        <div class="d-flex justify-content-between">
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
          <span class="badge"><%= link_to "Forgot password", new_password_path(resource_name) %></span>
        </div>
      </div>

      <div class="form-actions d-flex justify-content-between text-center mt-2">
        <%= f.button :submit, "Log in", class:'btn btn-primary' %>
        <%= link_to "Sign up", new_registration_path(resource_name), class:'btn btn-secondary' %>
      </div>
    </div>
  </div>
<% end %>