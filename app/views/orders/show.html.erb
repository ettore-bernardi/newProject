<p id="notice"><%= notice %></p>

<p>
  <strong>Total:</strong>
  <%= @order.total %>
</p>

<p>
  <strong>User:</strong>
  <%= @order.user_id %>
</p>

<p>
  <strong>Order date:</strong>
  <%= @order.order_date %>
</p>

<p>
  <strong>Done:</strong>
  <%= @order.done %>
</p>

<h4>items</h4>
  <ul>
    <% for @item in @order.items %>
      <div>
        Product: <%= @item.product.name %>
        Price: <%= @item.product.price*@item.quantity %>
      </div>
    <% end %>
  </ul>

<%= link_to 'Edit', edit_order_path(@order) %> |
<%= link_to 'Back', orders_path %>
