<%= simple_form_for(@product) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description %>
    <%= f.input :price %>
    <div class="form-check form-switch m-0 d-flex mt-1">
      <%= f.input :active, class:"form-check-input", type:"checkbox", id:"flexSwitchCheckDefault"%>
    </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit, class:"btn btn-primary" %>
    <%= link_to "#{t('activerecord.buttons.back')}", products_path, class:"btn btn-secondary" %>
  </div>
<% end %>
