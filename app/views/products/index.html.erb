<p id="notice"><%= notice %></p>

<h1><%= t('activerecord.attributes.product.title') %></h1>

<table class="table">
  <thead>
    <tr>
      <th><%= t('activerecord.attributes.product.name') %></th>
      <th><%= t('activerecord.attributes.product.description') %></th>
      <th><%= t('activerecord.attributes.product.price') %></th>
      <th><%= t('activerecord.attributes.product.active') %></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.name %></td>
        <td><%= product.description %></td>
        <td><%= product.price %></td>
        <td><%= t product.active.to_s %></td>
        <td><%= link_to "#{ t('activerecord.buttons.edit')} ", edit_product_path(product), class:"btn btn-primary" %></td>
        <td><%= link_to "#{ t('activerecord.buttons.destroy')}", product, method: :delete, data: { confirm: t('confirmation') }, class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to "#{ t('views.product.new')} ", new_product_path, class:"btn btn-primary" %>
